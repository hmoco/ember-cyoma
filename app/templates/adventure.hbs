{{outlet}}
{{#unless done}}
<h3> Choose your path: </h3>
<div class='row'>
    <div class='col-xs-6'>
        {{choice-comp choice=choiceA}}
        <button style='width:100%; height: 75%' type='button' class='btn btn-success' {{action 'choose' choiceA.id}}><h4> Pick A </h4></button>
    </div>
    <div class='col-xs-6'>
        {{choice-comp choice=choiceB}}
        <button style='width:100%; height: 75%' type='button' class='btn btn-success' {{action 'choose' choiceB.id}}><h4> Pick B </h4></button>
    </div>
</div>
{{else}}
<h3> Here's your playlist {{url}}</h3>
{{/unless}}
